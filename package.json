{
  "name": "node-rpc",
  "version": "0.1.0",
  "description": "Communicate different node processes via sockets",
  "author": {
    "name": "danikaze",
    "email": "danikaze@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danikaze/node-rpc"
  },
  "license": "MIT",
  "engines": {
    "node": "10.15.x",
    "npm": "6.4.x"
  },
  "scripts": {
    "test": "npm run lint",
    "build": "webpack --config webpack.config.js --env=production",
    "dev": "webpack --config webpack.config.js --env=development",
    "lint": "tslint -p tsconfig.json -c tslint.yaml",
    "clean": "rimraf app",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier",
      "pre-push": "npm run test"
    }
  },
  "devDependencies": {
    "@types/mkdirp": "^0.5.2",
    "clean-webpack-plugin": "^3.0.0",
    "git-revision-webpack-plugin": "^3.0.4",
    "husky": "^3.0.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.1.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.20.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-lines-between-class-members": "^1.3.6",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.6.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "extend-objects-only": "^1.0.0",
    "mkdirp": "^0.5.1",
    "vanilla-type-check": "^2.0.3",
    "winston": "^3.2.1",
    "winston-transport": "^4.3.0"
  }
}
